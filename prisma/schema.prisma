generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum ToolLevel {
  BASIC
  DOF
  CERTIFIED
  MAY_CERTIFY_OTHERS
}

enum MembershipType {
  HOUSEHOLD
  VOLUNTEER
  CORPORATE
}

enum RSVPStatus {
  ATTENDING
  NOT_ATTENDING
  NO_RESPONSE
  MAYBE
}

enum AuditAction {
  CREATE
  EDIT
  DELETE
  BECOME_ADMIN
}

model Participant {
  id            Int       @id @default(autoincrement())
  googleId      String?   @unique
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  dob                 DateTime?
  homeAddress         String?
  lastWaiverSign      DateTime?
  waiverSignedBy      Int?
  lastBackgroundCheck DateTime?

  householdId Int?
  household   Household? @relation(fields: [householdId], references: [id])

  sysadmin    Boolean @default(false)
  boardMember Boolean @default(false)
  keyholder   Boolean @default(false)
  shopSteward Boolean @default(false)

  toolStatuses        ToolStatus[]
  householdLeads      HouseholdLead[]
  memberships         Membership[]         @relation("ParticipantMemberships")
  corporationLeads    CorporationLead[]
  corporationMembers  CorporationMember[]
  programVolunteers   ProgramVolunteer[]
  programParticipants ProgramParticipant[]
  feePayments         FeePayment[]
  rsvps               RSVP[]
  rawBadgeEvents      RawBadgeEvent[]
  visits              Visit[]
}

model Tool {
  id           Int          @id @default(autoincrement())
  name         String
  safetyGuide  String?
  toolStatuses ToolStatus[]
}

model ToolStatus {
  userId Int
  toolId Int
  level  ToolLevel

  user Participant @relation(fields: [userId], references: [id])
  tool Tool        @relation(fields: [toolId], references: [id])

  @@id([userId, toolId])
}

model Household {
  id      Int     @id @default(autoincrement())
  name    String?
  address String?

  participants Participant[]
  leads        HouseholdLead[]
  memberships  Membership[]
}

model HouseholdLead {
  householdId   Int
  participantId Int

  household   Household   @relation(fields: [householdId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@id([householdId, participantId])
}

model Membership {
  id                   Int            @id @default(autoincrement())
  since                DateTime       @default(now())
  type                 MembershipType
  active               Boolean        @default(true)
  latestShopifyReceipt String?
  latestDocusign       String?

  householdId Int?
  household   Household? @relation(fields: [householdId], references: [id])

  volunteerId Int?
  volunteer   Participant? @relation("ParticipantMemberships", fields: [volunteerId], references: [id])

  corporateId Int?
  corporate   Corporation? @relation(fields: [corporateId], references: [id])
}

model Corporation {
  id           Int     @id @default(autoincrement())
  primaryEmail String?
  address      String?

  leads       CorporationLead[]
  members     CorporationMember[]
  memberships Membership[]
}

model CorporationLead {
  corporationId Int
  participantId Int

  corporation Corporation @relation(fields: [corporationId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@id([corporationId, participantId])
}

model CorporationMember {
  corporationId Int
  participantId Int

  corporation Corporation @relation(fields: [corporationId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@id([corporationId, participantId])
}

model Program {
  id           Int       @id @default(autoincrement())
  name         String
  leadMentorId Int?
  begin        DateTime?
  end          DateTime?

  volunteers   ProgramVolunteer[]
  participants ProgramParticipant[]
  fees         Fee[]
  events       Event[]
}

model ProgramVolunteer {
  programId     Int
  participantId Int
  isCore        Boolean @default(false)

  program     Program     @relation(fields: [programId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@id([programId, participantId])
}

model ProgramParticipant {
  programId     Int
  participantId Int

  program     Program     @relation(fields: [programId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@id([programId, participantId])
}

model Fee {
  id             Int    @id @default(autoincrement())
  programId      Int
  name           String
  nonMemberPrice Int
  memberPrice    Int

  program  Program      @relation(fields: [programId], references: [id])
  payments FeePayment[]
}

model FeePayment {
  feeId             Int
  participantId     Int
  paidOn            DateTime? @default(now())
  shopifyLink       String?
  quickBooksInvoice String?
  customNote        String?

  fee         Fee         @relation(fields: [feeId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@id([feeId, participantId])
}

model Event {
  id          Int      @id @default(autoincrement())
  programId   Int?
  name        String
  start       DateTime
  end         DateTime
  description String?

  program Program? @relation(fields: [programId], references: [id])
  rsvps   RSVP[]
  visits  Visit[]
}

model RSVP {
  eventId       Int
  participantId Int
  status        RSVPStatus

  event       Event       @relation(fields: [eventId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@id([eventId, participantId])
}

model RawBadgeEvent {
  id            Int      @id @default(autoincrement())
  participantId Int
  time          DateTime @default(now())
  location      String?

  participant Participant @relation(fields: [participantId], references: [id])
}

model Visit {
  id                Int       @id @default(autoincrement())
  participantId     Int
  arrived           DateTime
  departed          DateTime?
  associatedEventId Int?

  participant Participant @relation(fields: [participantId], references: [id])
  event       Event?      @relation(fields: [associatedEventId], references: [id])
}

model AuditLog {
  id                      Int         @id @default(autoincrement())
  time                    DateTime    @default(now())
  actorId                 Int
  action                  AuditAction
  tableName               String
  affectedEntityId        Int
  secondaryAffectedEntity Int?
  oldData                 Json?
  newData                 Json?
}

model Account {
  id                String  @id @default(cuid())
  userId            Int     @map("participant_id")
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user Participant @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String      @id @default(cuid())
  sessionToken String      @unique
  userId       Int         @map("participant_id")
  expires      DateTime
  user         Participant @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
